# Desired column order
desired_order <- c(
  "year", "January", "February", "March", "April", "May", "June",
  "July", "August", "September", "October", "November", "December",
  "Total", "Withdrawn"
)

# Only keep columns that actually exist
existing_order <- intersect(desired_order, names(monthly_totals))

# Reorder safely
monthly_totals <- monthly_totals[, existing_order]

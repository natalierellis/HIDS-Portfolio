library(gt)
library(dplyr)

five_year_surv %>%
  arrange(group) %>%
  mutate(`Line Color` = "") %>%
  select(`TTC Group` = group, `5-Year Survival` = survival_ci, `Line Color`) %>%
  gt() %>%
  tab_header(title = "5-Year Survival by TTC Group") %>%

  # Make all text black
  tab_style(
    style = cell_text(color = "black"),
    locations = cells_body()
  ) %>%
  tab_style(
    style = cell_text(color = "black"),
    locations = cells_column_labels(everything())
  ) %>%

  # Center the "5-Year Survival" column header
  tab_style(
    style = cell_text(align = "center"),
    locations = cells_column_labels(columns = "5-Year Survival")
  ) %>%
  tab_style(
    style = cell_text(align = "center"),
    locations = cells_body(columns = "5-Year Survival")
  ) %>%

  # Add clean border around table
  opt_table_outline()



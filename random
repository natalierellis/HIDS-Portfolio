library(ggplot2)

ggplot(NCDB, aes(x = TTC)) +
  geom_histogram(binwidth = 1, fill = "steelblue", color = "white", boundary = 0) +
  scale_x_continuous(
    breaks = 1:6,
    labels = paste0("Week ", 1:6),
    limits = c(0.5, 6.5)
  ) +
  labs(
    title = "Time to Chemotherapy by Week",
    x = "Weeks from Surgery to Chemotherapy",
    y = "Patient Count"
  ) +
  theme_minimal(base_size = 12) +
  theme(
    text = element_text(family = "Arial"),
    axis.title = element_text(face = "bold", size = 13),  # <–– Bold axis labels
    panel.grid.major = element_blank(),
    panel.grid.minor = element_blank(),
    panel.background = element_blank(),
    plot.background = element_blank(),
    axis.line = element_line(color = "black"),
    axis.ticks = element_line(color = "black")
  )


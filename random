library(ggplot2)

ggplot(df, aes(x = dx_defsurg_started_days)) +
  geom_histogram(binwidth = 1, fill = "steelblue") +
  geom_vline(xintercept = 0, color = "red", linetype = "dashed") +
  labs(title = "Distribution of Days from Diagnosis to Definitive Surgery",
       x = "Days from Diagnosis to Surgery",
       y = "Count")
